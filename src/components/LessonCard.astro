---
interface Props {
  title: string;
  description: string;
  color: string;
  icon: string;
}

const { title, description, color, icon } = Astro.props;
---

<article class="lesson-card" style={`--card-color: ${color}`}>
  <h3><span class="icon" aria-hidden="true">{icon}</span>{title}</h3>
  <p>{description}</p>
</article>

<style>
  .lesson-card {
    background: linear-gradient(135deg, color-mix(in oklab, var(--card-color), white 15%), var(--card-color));
    border-radius: 1rem;
    color: #102038;
    padding: 1rem;
    box-shadow: 0 8px 20px color-mix(in oklab, var(--card-color), black 75%);
    transition: transform 180ms ease;
  }

  .lesson-card:hover {
    transform: translateY(-4px) rotate(-0.5deg);
  }

  h3 {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin: 0 0 0.5rem;
    font-size: 1.2rem;
  }

  p {
    margin: 0;
    line-height: 1.4;
    font-size: 1rem;
  }

  .icon {
    font-size: 1.4rem;
  }
</style>
